<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xinra.reviewcommunity.android.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true"
        android:focusableInTouchMode="true"> <!-- prevent auto-focus of SearchView -->

        <android.support.v7.widget.SearchView
            android:id="@+id/mainSearchWidget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/mainCategoryListBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categories" />

        <Button
            android:id="@+id/mainScanBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan Barcode" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
